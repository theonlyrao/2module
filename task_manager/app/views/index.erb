<div class="col-md-12">

  <div class="row">
    <h1>All Tasks</h1>
  </div>
      <table class="table">
        <tr>
          <th>Task ID</th>
          <th>Task Title</th>
          <th> </th>
          <th> </th>
        </tr>
        <tr>
         <% @tasks.each do |task| %>
            <td><%= task.id %></td>
            <td> <a href="/tasks/<%= task.id %>"><%= task.title %></a></td>
            <td> <a href="/tasks/<%= task.id %>/edit">Edit</a></td>
            <td>
              <form action="/tasks/<%= task.id %>" method="post">
                <input type="hidden" name="_method" value="delete">
                <input type="submit" value="Delete">
              </form>
            </td>
        </tr>
       <% end %>
     </table>
 </div>
